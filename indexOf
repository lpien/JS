<!DOCTYPE html>
	<html>
		<head><title> indexOf </title></head>
		
		<body>
			<script type = "text/javascript">
				//returns index equal to value
				function indexOf(a, v) {
					for (var i = 0; i < a.length; i++) {
						if(a[i]==v){
							return i;
						}
					}
					return -1;
				}
				var color = window.prompt("Enter a color");
				var array = ["maroon", "red", "orange", "yellow", "olive", "purple", "fuchia", "white", "lime", "green", "navy", "blue", "aqua", "teal", "black", "silver", "gray"];
				document.writeln(indexOf(array, color));
				
			</script>
		</body>
	</html>
